@model ProductRating

<span title="@Model.Rating.GetValueOrDefault().ToString("N1")">
    @for (var i = 1; i <= 5; i++)
    {
        var starClass = (Model.Rating >= i) ? "star" : "star-empty";
        <span class="rating-star glyphicon glyphicon-@starClass"></span>
    }
</span>
<span>(@Model.ReviewCount)</span>